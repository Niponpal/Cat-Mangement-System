@model List<Seller>



<h2 class="text-center mb-4">Sellers List</h2>

<div class="mb-3 text-end">
    <a asp-action="CreateOrEdit" class="btn btn-success">+ Add New Seller</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Join Date</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var seller in Model)
            {
                <tr>
                    <td>@seller.Id</td>
                    <td>@seller.FullName</td>
                    <td>@seller.Email</td>
                    <td>@seller.Phone</td>
                    <td>@seller.Address</td>
                    <td>@seller.JoinDate.ToString("yyyy-MM-dd")</td>
                    <td class="text-center">
                        <a asp-action="CreateOrEdit" asp-route-id="@seller.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@seller.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@seller.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No sellers found.</td>
            </tr>
        }
    </tbody>
</table>
