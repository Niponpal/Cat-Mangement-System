@model HomeViewModel;

@{
	ViewData["Title"] = "Home Page";
}


<div class="container col-xxl-8 px-4 py-5">
	<div class="row align-items-center g-5 py-5">
		<div class="col-12 col-lg-6">
			<h1 class="display-5 fw-bold lh-1 mb-3">
				Bloggie - The Cat Blog
			</h1>
			<p class="lead">
				Bloggie is the cozy home to cat blogs, covering a wide range of topics about our furry friends. From cat care, nutrition, health tips, training, breeds, and behavior to fun stories and cute cat moments – you’ll find everything here. 🐱

				Want to read the latest articles about cats? 🐾 Join the Bloggie app and get weekly cat blogs straight to your email. Stay updated, become a better cat parent, and enjoy reading about the wonderful world of cats.

				Bloggie – Because every cat has a story to tell. 🐾
			</p>
		</div>

		<div class="col-12 col-lg-6">
			<img src="https://placecats.com/300/200"
				 alt="Bloggie - Dev blogs"
				 class="d-block mx-lg-auto img-fluid" style="height:500px; width:450px" />
		</div>
	</div>
</div>

 
<div class="container">
	<div class="row justify-content-center text-center">
		<div class="col-6 text-center my-3">
			@if (Model != null && Model.sellers.Any())
			{
				foreach (var seller in Model.sellers)
				{
					<span class="badge bg-dark me-1"> @seller.FullName </span>
				}
			}
		</div>
	</div>
</div>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			@if (Model != null && Model.Cats.Any())
			{
				foreach (var cats in Model.Cats)
				{
					<div class="mb-5 bg-light box-shadow p-5">
						<img src="@cats.ImageUrl" alt="@cats.Description"
							 class="mb-2 d-block img-fluid" />

						<h2 class="mb-4">@cats.Description</h2>
						<p class="mb-4">
							Genter: @cats.Gender
							<br />
							Published Date: @cats.PostedDate.ToShortDateString()
						</p>

						<p class="mb-4">
							@foreach (var cat in cats.sellers)
							{
								<span class="badge bg-secondary me-1">@cat.FullName</span>
							}
						</p>

						<p class="mb-4">@cats.Description</p>

						<a class="btn btn-dark"
						   asp-area=""
						   asp-controller="Blogs"
						   asp-action="Index"
						   asp-route-urlHandle="@cats.ImageUrl">Read More</a>
					</div>
				}
			}
		</div>
	</div>
</div>