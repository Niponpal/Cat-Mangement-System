@model List<Cat>



<div class="card">
    <div class="card-header">
        <a asp-action="CreateOrEdit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Cat
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>PostedDate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Breed</td>
                        <td>@item.Age</td>
                        <td>@item.Gender</td>
                        <td>@item.Price</td>
                        <td>@item.Color</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="@item.ImageUrl" alt="Image" style="width:100px; height:auto;" />
                        </td>
                        <td>@item.PostedDate</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i></a>
                                <form method="post" onclick="return confirm('Are You Sure Delete Data')">

                                    <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3-fill"></i></button>
                                </form>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-1"><i class="bi bi-info-circle"></i></a>
                            </div>
                        </td>
                    </tr>
                   
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>



@section Scripts {
    <script>
        $(function () {
          $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>
}


