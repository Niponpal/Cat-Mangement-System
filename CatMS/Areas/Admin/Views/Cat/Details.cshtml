@model CatMS.Models.Cat

<div class="container mt-5">
    <div class="row align-items-center border p-3 rounded shadow-sm">

        <!-- Cat Image -->
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width:250px; height:auto;" />
        </div>

        <!-- Cat Details -->
        <div class="col-md-8">
            <div class="mb-2">
                <strong>Name:</strong> <span class="text-secondary">@Model.Name</span>
            </div>
            <div class="mb-2">
                <strong>Breed:</strong> <span class="text-secondary">@Model.Breed</span>
            </div>
            <div class="mb-2">
                <strong>Age:</strong> <span class="text-secondary">@Model.Age @((Model.Age == 1) ? "month/year" : "months/years")</span>
            </div>
            <div class="mb-2">
                <strong>Gender:</strong> <span class="text-secondary">@Model.Gender</span>
            </div>
            <div class="mb-2">
                <strong>Price:</strong> <span class="text-success fw-bold">$@Model.Price.ToString("0.00")</span>
            </div>
            <div class="mb-2">
                <strong>Color:</strong> <span class="text-secondary">@Model.Color</span>
            </div>
            <div class="mb-2">
                <strong>Description:</strong> <span class="text-secondary">@Model.Description</span>
            </div>
            <div class="mb-2">
                <strong>Posted Date:</strong> <span class="text-muted">@Model.PostedDate.ToString("dd MMM yyyy")</span>
            </div>

            <!-- Buttons -->
            <div class="mt-3">
                <a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-warning me-2">✏️ Edit</a>
                <a asp-action="Index" class="btn btn-secondary">⬅️ Back</a>
            </div>
        </div>

    </div>
</div>
