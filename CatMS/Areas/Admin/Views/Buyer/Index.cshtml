@model List<Buyer>



<h2 class="text-center mb-4">Buyers List</h2>

<div class="mb-3 text-end">
    <a asp-action="CreateOrEdit" class="btn btn-success">+ Add New Buyer</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Register Date</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var buyer in Model)
            {
                <tr>
                    <td>@buyer.Id</td>
                    <td>@buyer.FullName</td>
                    <td>@buyer.Email</td>
                    <td>@buyer.Phone</td>
                    <td>@buyer.Address</td>
                    <td>@buyer.RegisterDate.ToString("yyyy-MM-dd")</td>
                    <td class="text-center">
                        <a asp-action="CreateOrEdit" asp-route-id="@buyer.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@buyer.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@buyer.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No buyers found.</td>
            </tr>
        }
    </tbody>
</table>
